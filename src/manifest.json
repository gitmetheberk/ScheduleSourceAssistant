{
    "name": "Schedule Source Assistant",
    "version": "0.1",
    "description": "A custom schedule source assistant for Help Desk Central student leaders",
    "permissions": ["storage", "alarms", "tabs", "notifications", 
      "https://www.schedulesource.net/Enterprise/TeamWork5/Emp/Sch/#All"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [{
      "matches": ["https://www.schedulesource.net/Enterprise/TeamWork5/Emp/Sch*"],
      "js": ["enable_icon.js"]
    }],
    "options_page": "options.html",
    "page_action":{
        "default_popup": "popup.html",
        "default_icon": {
          "16": "images/icon16.png",
          "24": "images/icon24.png",
          "32": "images/icon32.png"
        }
    },
    "icons": {
      "16": "images/icon16.png",
      "24": "images/icon24.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png"
      },
    "manifest_version": 2
}